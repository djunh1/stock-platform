<% @posts.each do |p| %>
  <div class="newsBox m-2 p-3">
    <div class="row">
      <div class="col-1 col-md-2 text-center">
        <div id="vote-actions" class="vote" data-id="<%= p.id  %>">
        <%= csrf_meta_tags %>
          <div class="fa fa-arrow-up upvote <%= is_upvoted p %>" ></div>
          <span class="font-weight-bold score"><%= p.score %></span>
          <div class="fa fa-arrow-down downvote <%= is_downvoted p %>"></div>
        </div>
      </div>
      <div class="col-11 col-md-10">
        <p>
          <small>
            <%= link_to p.community.name, community_path(p.community.id),class: "blog_preview_link" %>
            Posted By:
            <%= link_to p.user.name, profile_path(p.user.id), class: "blog_preview_link" %>
            <%= time_ago_in_words p.created_at %></small>
        </p>
        <%= link_to p.title, community_post_path(p.community_id, p), class:"blog_preview_link" %>
        <p><%= truncate p.body, length:200  %></p>
      </div>
    </div>
  </div>
<% end %>
