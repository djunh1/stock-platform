<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |e| %>
      <%= alert_generator e %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.label :topic_id %>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title,
                          {

                            include_blank: true
                          },
                          class: 'form-control'
                        ) %>
  </div>
  <div class="form-group">
    <%= f.radio_button :status, "draft" %>
    <%= f.label :status, "Draft" %>
    <%= f.radio_button :status, "published" %>
    <%= f.label :status, "Published" %>
  </div>
  <div class="form-group">
    <p>Headline text - displayed on the index:</p>
    <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: "Content" %>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      Upload Image
      <%= f.file_field :main_image, style: 'display:none;' %>
    </label>
  </div>
  <div class="form-group">
    <p>Blog Text: </p>
    <%= f.rich_text_area :blog_post, rows: 50, cols: 50 %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
