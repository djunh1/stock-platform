<div class="container-blogfather" style="overflow: hidden">
  <%= image_tag the_blog_father_image(@blog.main_image),class: 'container-blogfather--img' %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 blog-main">
      <article class="default article">
        <div class="content">
          <h1 class="article-title"><%= @blog.title %></h1>
          <div class="meta">
            <span class="date moment"><%= @blog.created_at.strftime("%A, %b %d") %></span>
            <span class="author">
              |  Douglas Jacobson
            </span>
          </div>
          <nav class="breadcrumb row">
            <div class='col'>
              <%= link_to "Home", blogs_path, class: 'breadcrumb-item' %>
              <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
              <span class="breadcrumb-item active"><%= @blog.title %></span>
              <span class="float-right">
                <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
                <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
              </span>
            </div>
          </nav>
          <div>
            <%= @blog.blog_post %>
          </div>
        </div>
        <div class="footer">
          <div class="tags">
            <i class="fa fa-tags"></i>
            <div class="links">
              <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'ml-3' %>
            </div>
          </div>
        </div>
      </article>
      <%# <%= render 'comments/comment_form' %>
      <div id='comments' data-blog-id="<%= @blog.id %>">
        <%# <%=render @blog.comments %>
      </div>
    </div>
  </div>
</div>
