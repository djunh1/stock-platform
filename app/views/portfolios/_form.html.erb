
<%= form_for(portfolio_item) do |form| %>
<% if portfolio_item.errors.any? %>
  <% portfolio_item.errors.full_messages.each do |e| %>
      <%= js add_gritter(e, title: "Errors Submitting Portfolio") %>
  <% end %>
<% end %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_area :subtitle, class: 'form-control' %>
    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        Upload main image file
        <%= form.file_field :main_image, style: 'display:none;' %>
      </label>

    </div>
    <div class="form-group">
      <label class="btn btn-primary">
        Upload thumb image file
        <%= form.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>

  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 10 %>
    </div>


  </div>
  </div
  <div class="row">
    <div class=col-md-12">
      <h2>Technologies used</h2>

      <%= form.fields_for :technologies do |tech| %>
        <%= render 'technology_fields', f: tech %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add Technology', form, :technologies %>
     </div>

    </div>

    <div class="actions">
      <%= form.submit 'Save Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>

<% end %>
